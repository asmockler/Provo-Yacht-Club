        <div class="modal-body">
          Are you sure you want to delete this feature: <b><%= @post['Feature-Title']%></b>? This cannot be undone!
        </div>
        <div class="modal-footer">

          <button class="btn btn-default" data-dismiss="modal">Close</button>
          <a class="btn btn-danger" id="deletePost" data-dismiss="modal" href="/delete/feature/<%= @post['_id'] %>">Delete</a>

          <script type="text/javascript">
            $('#deletePost').click(function() {
              var table = $("#feat-table");
              var count = parseInt(table.attr('data-individual'));
          $.get('/delete/feature/<%= @post['_id'] %>');
          table.attr('data-individual', count-1);
          $('#<%= @post['_id'] %>').show().delay(300).fadeOut(800);
        });

          </script>

      </div>
