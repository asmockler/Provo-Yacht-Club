<% @posts.each do |post| %>

<div class="col-md-12" style="border-bottom:2px solid #ccc; margin-bottom:35px; padding:1%;">

  <div class="col-md-4" style="margin-right:-5%">
    <img src="<%= post['AlbumArt']%>" style="max-width:100%"/><br /><br />
    <a href="/<%= post['tag'] %>"><span class="label label-default"><%= post['tag'] %></span></a>
    <a href="/<%= post['tag2'] %>"><span class="label label-default"><%= post['tag2'] %></span></a>
  </div>

  <div class="col-md-8">
    <h3><%= post['Song-Title'] %> - <%= post['Artist'] %> <br /><small style="color:#777"><%= post["Album"] %></small></h3>
    <p><%= post['Description'] %></p>
    <% if post['Source'] == "spotify" %>
      <iframe src="https://embed.spotify.com/?uri=<%= post['Media'] %>" width="250" height="80" frameborder="0" allowtransparency="true"></iframe>
    <% elsif post['Source'] == "Soundcloud" %>
      <iframe width="100%" height="100" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=<%= post["Media1"] %>&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_artwork=true"></iframe>
    <%else end%>

  </div>

</div> 

<%end%>

