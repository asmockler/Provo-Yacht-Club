<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Provo Yacht Club</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

<!-- Navbar -->
    <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
      <div class="container-fluid">

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand" href="#">Provo Yacht Club</a>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="#">Dance</a></li>
            <li><a href="#">Chill</a></li>
            <li><a href="#">Revival</a></li>
            <li><a href="#">Big Beats</a></li>
            <li><a href="#">Etc.</a></li>
          </ul>
        </div>

      </div>
    </nav>

<!-- Header -->

    <div class="jumbotron">
      <div class="container">
        <h1 style="font-family:serif; color:#fff; text-shadow: 1px 2px 10px #333; font-variant:small-caps;">The Provo Yacht Club</h1>
      </div>
    </div>

<!-- Content -->
    <div class="container-fluid" style="margin-left:5%;margin-right:5%;">
      <div class="row">

    <!-- Left Side (Strong Side) -->
        <div class="col-md-7" style="padding-right:20px">

            <div class="row"><p class="lead text-headers">This Week</p></div>

          <!--Recent Posts -->
          <div class="row">

            <div class="recent-post-div" style="align:centered;padding:-15px;">

              <% settings.mongo_db["Posts"].find.sort('_id','descending').limit(6).each do |post| %>
              <div class="col-md-2" style="" data-toggle="tooltip" data-html="true" title="<strong><%= post['Song-Title'] %></strong><br /><%= post['Artist'] %> <br /> <i><%= post['Album'] %></i>">
                  <img class="recent-post" src="<%= post['AlbumArt']%>" />
              </div>
              <% end %>

            </div>
          </div>

          <!-- Full Posts -->
          <div class="row" style="margin-top:15px;margin-right">

            <p class="lead text-headers">Recent Posts</p>

            <!-- Template for Posts -->
            <% settings.mongo_db["Posts"].find.sort('_id','descending').limit(10).each do |post| %>

            <div class="col-md-12 post-box">

              <div class="col-md-3">
                <img style="max-width:175px;max-height:175px" src="<%= post['AlbumArt']%>" /><br /><br />
                <a href="#"><span class="label label-default">Dance</span></a>
              </div>

              <div class="col-md-9">
                <h3><%= post['Song-Title'] %> - <%= post['Artist'] %> <br /><small><%= post["Album"] %></small></h3>
                <p><small><%= post['Description'] %></small></p>
                <iframe src="https://embed.spotify.com/?uri=<%= post['Media'] %>" width="250" height="80" frameborder="0" allowtransparency="true"></iframe>
              </div>

            </div>

            <% end %>

          </div>


        </div>

        <!-- to separate the sides -->
        <div class="col-md-1" style="margin-right:-55px"></div>

    <!-- Right Side -->
        <div class="col-md-4" >
          <div class="row">
            <p class="text-headers lead">Featured Artist</p>

            <div class="feature-box">
              <iframe src="//www.noisetrade.com/service/widgetv2/f5c0767c-429f-46bb-ae53-35bf6c1624f6" width="300" height="375" scrolling="no" frameBorder="0"></iframe>
            </div><br />

            <button class="col-md-12 btn btn-blue">Donate to the Provo Yacht Club!</button>

          </div>
        </div>

      </div>
    </div><!-- close out content -->

    <!-- Bottom Nav -->
    <div class="bottom-menu">
      <a href="#" class="pull-right">About Us</a>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $('div').tooltip();
    </script>
    <script>
      $(document).scroll(function () {
          var y = $(this).scrollTop();
          if (y > 80) {
              $('.bottom-menu').slideDown(200);
          } else {
              $('.bottom-menu').slideUp();
          }

      });
    </script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-48737823-1', 'provoyachtclub.com');
      ga('send', 'pageview');
    </script>
  </body>
</html>