<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Provo Yacht Club | Great Music Daily, Featuring Provo's Finest Artists</title>
      <meta name="description" content="Provo Yacht Club is a music blog based in Provo, Utah, delivering the world's hottest tracks daily with a focus on the growing Provo music scene.">
      <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css'>
      <link href="css/bootstrap.min.css" rel="stylesheet">
      <link href="css/styles.css" rel="stylesheet">
      <!-- Analytics -->
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-48737823-1', 'provoyachtclub.com');
        ga('send', 'pageview');
      </script>
  </head>
  <body data-total-songs="<%= @total_songs %>">
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div style='margin-left:25px;margin-right:25px'>
          <!-- Play Controls -->
          <ul class="nav navbar-nav">
            <li><a href="#"><span class="glyphicon glyphicon-backward" id="skip-backward"></span></a></li>
            <li>
              <a href="#" id="play"><span class="glyphicon glyphicon-play" id="play_button"></span></a>
              <a href="#" id="pause" style="display:none"><span class="glyphicon glyphicon-pause" id="pause_button"></span></a>
            </li>
            <li><a href="#"><span class="glyphicon glyphicon-forward" id="skip-forward"></span></a></li>
          </ul>
          <!-- Progress Bar -->
          <div class="nav navbar-text progress song-progress" style="width:200px;margin-top:15px;margin-left:0">
            <div class="progress-bar" id="songProgress" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <!-- Soundcloud Badge -->
          <div class="nav navbar-text">
            <a href="#" id="soundcloudLink"><img src="http://developers.soundcloud.com/assets/logo_big_white-bdafb3beba25fb86c2df365d05674e64.png" style="height:25px;margin-left:-20px"/></a>
          </div>
          <!-- Song Title -->
          <p class="navbar-text" style="font-size:13px;margin-top:17px;margin-left:-10px;padding-left:0"><span id="title"></span></p>
          <!-- Right Side Nav Stuff -->
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#" id="goHome" style="display:none">HOME</a></li>
            <li><a href="#" id="showBlog">BLOG</a></li>
            <li><a href="#" id="showAbout">ABOUT</a></li>
          </ul>
        </div>
      </nav>



      <main class="container">
        <section class="logo">
          <img src="provo_yacht_club2.png" alt="Provo Yacht Club" class="img-responsive">

        </section>
        <section class="content"></section>
      </main>



      <!-- Frame for Bottom Slider -->
      <div class="holds-all-the-guts">
        <!-- Soundcloud Badge -->
        <div class="row soundcloud-badge-row">
          <div class="pull-right">
            <a href="http://www.soundcloud.com">
              <img src="http://developers.soundcloud.com/assets/powered_by_white-7ee4327cfbe5d678897edf6b6c5dd30f.png" alt="Powered By Soundcloud">
            </a>
          </div>
        </div>
        <!-- Slider controls -->
        <div class="row set-changer">
          <!-- Sliding Left -->
          <div class="col-xs-1" id="view-previous-set">
            <span class="glyphicon glyphicon-chevron-left"></span><span class="glyphicon glyphicon-chevron-left"></span>
          </div>
          <!-- Sliding Right -->
          <div class="col-xs-1 col-xs-offset-10" id="view-next-set">
            <span class="glyphicon glyphicon-chevron-right pull-right"></span><span class="glyphicon glyphicon-chevron-right pull-right"></span>
          </div>
        </div>
        <!-- Song Thumbnails -->
        <div style="background-color:#111">
          <div class="song-selector">
            <div class="row">
              <%= erb :'Index/partials/song_thumbs' %>
            </div>
          </div>
        </div>
      </div> <!-- /holds-all-the-guts -->

      <!-- Frame for Blog and About -->
      <div style="display:none;position:absolute;z-index:4;right:0;top:0;height:100%;width:100%;background-color:#111" id="landing">
        <div id="blog" style="display:none"></div>
        <div id="about" style="display:none"></div>
      </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
        <script src="http://connect.soundcloud.com/sdk-2.0.0.js"></script>
        <script type="text/javascript" src="js/front.js"></script>
        <script type="text/javascript" src="js/blog.js"></script>



  </body>
</html>