<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Provo Yacht Club | Great Music Daily, Featuring Provo's Finest Artists</title>
      <meta name="description" content="Provo Yacht Club is a music blog based in Provo, Utah, delivering the world's hottest tracks daily with a focus on the growing Provo music scene.">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css'>
      <link href="/css/lib/bootstrap.min.css" rel="stylesheet">
      <link href="/css/int/index/index.css" rel="stylesheet">
      <link href="/css/int/index/blog.css" rel="stylesheet">
      <link href="/css/int/index/about.css" rel="stylesheet">
      <!-- Analytics -->
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-48737823-1', 'provoyachtclub.com');
        ga('send', 'pageview');
      </script>
  </head>
  <body data-total-songs="<%= @total_songs %>">
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div style='margin-left:25px;margin-right:25px'>
          <!-- Play Controls -->
          <ul class="nav navbar-nav">
            <li><a href="#" id="skip-backward"><span class="glyphicon glyphicon-backward"></span></a></li>
            <li>
              <a href="#" id="play" onclick="return false;"><span class="fay-play-default" id="play-button" data-fay-size="20"></span></a>
            </li>
            <li><a href="#" id="skip-forward"><span class="glyphicon glyphicon-forward"></span></a></li>
          </ul>
          <!-- Progress Bar -->
          <div class="nav navbar-text progress song-progress" style="width:200px;margin-top:15px;margin-left:0">
            <div class="progress-bar" id="song-progress" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <!-- Soundcloud Badge -->
          <div class="nav navbar-text">
            <a href="#" id="soundcloudLink"><img src="http://developers.soundcloud.com/assets/logo_big_white-bdafb3beba25fb86c2df365d05674e64.png" style="height:25px;margin-left:-20px"/></a>
          </div>
          <!-- Song Title -->
          <p class="navbar-text" style="font-size:13px;margin-top:17px;margin-left:-10px;padding-left:0"><span id="title"></span></p>
          <!-- Right Side Nav Stuff -->
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#" id="goHome" style="<% unless @sidebar_state %>display:none<% end %>">HOME</a></li>
            <li><a href="/event" target="_blank">EVENT</a></li>
            <li><a href="#" id="showBlog">BLOG</a></li>
            <li><a href="#" id="showAbout">ABOUT</a></li>
          </ul>
        </div>
      </nav>

      <!-- MOBILE NAVBAR -->
      <section class="mobile-nav">
        <ul>
          <li><a href="/event">EVENT</a></li>
          <li><a href="#" id="showBlog" >BLOG</a></li>
          <li><a href="#" id="showAbout" >ABOUT</a></li>
        </ul>
      </section>

      <main class="container">
        <section class="logo <%= @sidebar_state %>">
          <img src="/assets/provo_yacht_club2.png" alt="Provo Yacht Club" class="img-responsive">
        </section>
        <section class="content"></section>
      </main>

      <!-- MOBILE CONTROL ELEMENTS -->
      <section class="mobile-player">
        <div class="mobile-song-info">
          <span id="mobile-title"></span><br>
          <span id="mobile-artist"></span>
        </div>
        <div class="player-controls">
          <a href="#"> <span class="glyphicon glyphicon-backward" id="mobile-skip-backward"></span> </a>
          <a href="#" id="play"> <span class="fay-play-default" id="mobile-play-button" data-fay-size="50"></span> </a>
          <a href="#"><span class="glyphicon glyphicon-forward" id="mobile-skip-forward"></span></a>
        </div>
      </section>

    <!-- Frame for Bottom Slider -->
    <div class="slider">
      <a href="/random" id="random-link">Random Song!</a>
      <!-- Soundcloud Badge -->
      <a href="http://www.soundcloud.com" class="soundcloud-badge">
        <img src="http://developers.soundcloud.com/assets/powered_by_white-7ee4327cfbe5d678897edf6b6c5dd30f.png" alt="Powered By Soundcloud">
      </a>
      <!-- Song Thumbnails -->
      <div class="song-thumb-row">
        <div class="load-previous">
          <a href="#">
            <h5>Load<br>More<br>Songs</h5>
          </a>
        </div>
        <%= erb :"/Index/partials/song_thumb" %>
        <div class="load-more">
          <a href="#">
            <h5>Load<br>More<br>Songs</h5>
          </a>
        </div>
      </div>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
    <script src="//connect.soundcloud.com/sdk-2.0.0.js"></script>
    <script src="/js/lib/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.2/raphael-min.js"></script>
    <script src="/js/lib/Fay.js"></script>
    <script src="/js/lib/jquery.mousewheel.min.js"></script>
    <script type="text/javascript" src="/js/int/index/index.js"></script>
    <script type="text/javascript" src="/js/int/index/blog.js"></script>
    <script type="text/javascript" src="/js/int/index/router.js"></script>
  </body>
</html>