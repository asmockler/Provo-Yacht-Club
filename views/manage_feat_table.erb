<% @posts.each do |post|  %>


  <tr id="<%= post["_id"] %>">
    <td style="width:auto"><a class="edit btn btn-primary btn-xs btn-block" href="/Manager/edit-modal-feat/<%= post['_id'] %>" style="width:40px"> <span class="glyphicon glyphicon-pencil" data-toggle="tooltip" title="Edit"></span> </a></td>
    <td style="width:auto"><a class="delete btn btn-danger btn-xs btn-block" href="/Manager/deleteFeat/<%= post['_id'] %>" style="width:40px"><span class="glyphicon glyphicon-trash" data-toggle="tooltip" title="Delete"></span></a></td>
    <td><%= post['Feature-Title'] %></td>
    <td class="hidden-sm hidden-xs"><%= post['type'] %></td>
    <td class="hidden-sm hidden-xs"><%= post['entrytime'] %></td>
    <td class="text-center">
      <% if post['active'] == true %>
        <span class="glyphicon glyphicon-ok text-success"></span>
      <% else %>
        <span class="glyphicon glyphicon-remove text-danger"></span>
      <% end %>
    </td>
  </tr>

<%end%>