</head>
<body data-total-songs="<%= @total_songs %>">

  <!-- I love hacky coding so this is how I'm handling mobile v desktop. Sorry, world. -->
  <div class="hidden-sm hidden-xs" id="desktop">
    <nav class="navbar navbar-inverse-navbar-fixed-top">
      <div style="margin-left:25px;margin-right:25px">
        <ul class="nav navbar-nav">
          <!-- Skip Back -->
          <li><a href="#" style="margin-right:0; padding-right:0"><span class="glyphicon glyphicon-backward" id="skip-backward"></span></a></li>
          <!-- Play and Pause -->
          <li>
            <a href="#" id="play"><span class="glyphicon glyphicon-play" id="play_button"></span></a>
            <a href="#" id="pause" style="display:none"><span class="glyphicon glyphicon-pause" id="pause_button"></span></a>
          </li>
          <!-- Skipping Forward -->
          <li><a href="#" style="margin-left:0; padding-left:0"><span class="glyphicon glyphicon-forward" id="skip-forward"></span></a></li>
        </ul>
        <!-- Progress Bar -->
        <div class="nav navbar-text progress song-progress" style="width: 200px; margin-top:15px; margin-left:0">
          <div class="progress-bar" id="songProgress" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <!-- Volume Control -->
        <ul class="nav navbar-nav">
          <li><a href="#" style="margin-left:0; padding-left:0"><span class="glyphicon glyphicon-headphones" id="volume-control"></span></a></li>
        </ul>
        <!-- Soundcloud Icon -->
        <div class="nav navbar-text">
          <a href="#" id="soundcloudLink">
            <img src="http://developers.soundcloud.com/assets/logo_big_white-bdafb3beba25fb86c2df365d05674e64.png" style="height:25px;margin-left:-20px">
          </a>
        </div>
        <!-- Song Name -->
        <p class="navbar-text" style="font-size:13px;margin-top:17px;margin-left:-10px;padding-left:0"><span id="title"></span></p>
        <!-- Right Side Navigation -->
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#" id="goHome" style="display:none">HOME</a></li>
          <li><a href="#" id="showBlog">Blog</a></li>
          <li><a href="#" id="showAbout">ABOUT</a></li>
          <!-- Leaving this here for post sorting in the future -->
          <!-- <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">SORT MUSIC <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href=""></a></li>
              <li><a href=""></a></li>
              <li><a href=""></a></li>
            </ul>
          </li> -->
        </ul>
      </div>  
    </nav>

    <!-- Guts for the pop-over volume controls -->
    <!-- <div class="volume-container">
      <div class="progress volume-bar" style="width:200px;margin-top:15px;margin-left:0">
        <div class="progress-bar" id="volumeControl" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-value-max="1"></div>
      </div>
    </div> -->

    <!-- ############ Starting Real Content!! ############ -->
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <!-- Main Image -->
          <div align="center">
            <img src="provo_yacht_club2.png" style="width:60%" class="img-responsive">
          </div><br />
          <!-- Contains and centers big play button -->
          <div class="text-center">
            <!-- Big Play Button -->
            <a href="#" id="play_big">
              <span class="glyphicon glyphicon-play" id="play_button" style="font-size:65px;color:white"></span>
            </a>
            <!-- Big Pause Button -->
            <a href="#" style="display:none" id="pause_big">
              <span class="glyphicon glyphicon-pause" id="pause_button" style="font-size:65px;color:white"></span>
            </a>
            <!-- Start Playing Text -->
            <div id="hidePlay">
              <a href="#" style="text-decoration:none" id="play_start_text">
                <h2 class="lead" style="color:white;font-weight:100;letter-spacing:1px">Start Playing</h2>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div> <!-- /Container -->

    <!-- Frame for Song Slider -->
    <div class="holds-all-the-guts">
      <!-- Powered By Soundcloud Badge -->
      <div class="row soundcloud-badge-row">
        <div class="pull-right">
          <a href="#">
            <img src="http://developers.soundcloud.com/assets/powered_by_white-7ee4327cfbe5d678897edf6b6c5dd30f.png" alt="Powered By Soundcloud">
          </a>
        </div>
      </div>
      <!-- For the left and right controls on the slider -->
      <div class="row set-changer">
        <!-- Slide Left Chevrons -->
        <div class="col-xs-1" id="view-previous-set">
          <span class="glyphicon glyphicon-chevron-left"></span><span class="glyphicon glyphicon-chevron-left"></span>
        </div>
        <!-- Slide Right Chevrons -->
        <div class="col-xs-1 col-xs-offset-10" id="view-next-set">
          <span class="glyphicon glyphicon-chevron-right pull-right"></span><span class="glyphicon glyphicon-chevron-right pull-right"></span>
        </div>
      </div>
      <!-- Actual Song Slider -->
      <div style="background-color:#111">
        <div class="song-selector">
          <div class="row">
            <%= erb :song_thumbs %>
          </div>
        </div>
      </div>
    </div>

    <!-- Frame for Blog and About -->
    <div id="landing" style="display:none;position:absolute;z-index:4;right:0;top:0;height:100%;width:100%;background-color:#111">
      <!-- Frame for Blog -->
      <div id="blog" style="display:none"></div>
      <!-- Frame for About -->
      <div id="about" style="display:none"></div>
    </div>

  </div> <!-- /Desktop -->

  <!-- ################ MOBILE ################ -->

  <div class="visible-xs visible-sm" id="mobile">
    
  </div>

<!-- Load in Dem Dependencies -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
  <script src="http://connect.soundcloud.com/sdk-2.0.0.js"></script>
  <script type="text/javascript" src="js/front.js"></script>
</body>
</html>