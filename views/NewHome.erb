<!-- ############# STARTING CONTENT ############## -->
    <div class="container"> 

      <div class="row">
        <div class="col-xs-12">
          <div align="center"><img src="provo_yacht_club2.png" class="img-responsive" style="width:60%;"/></div><br/>

          <div class="text-center">

            <a href="#" id="play_big">
              <span class="glyphicon glyphicon-play" id="play_button" style="font-size:80px; color:white"></span>
            </a>

            <a href="#" id="pause_big" style="display:none">
              <span class="glyphicon glyphicon-pause" id="pause_button" style="font-size:80px; color:white;"></span>
            </a>

            <div id="hidePlay"><a href="#" id="play_start_text" style="text-decoration:none">
              <h2 class="lead" style="color:white">Start Playing</h2>
            </a></div>

          </div>
        </div>

      </div>

    </div><!-- container-fluid -->

    <div class="album-player" style="z-index:5;">
      <div class="row">
        <% @posts.each do |post| %>

        <!-- <div class="col-xs-1" id="testingThings" data-container="body" data-toggle="tooltip" data-html="true" data-url="<%= post['Media1'] %>" title="<strong><%= post['Song-Title'] %></strong><br /><%= post['Artist'] %> <br /> <i><%= post['Album'] %></i>"> -->
        <div class="col-xs-1" id="testingThings" data-url="<%= post['Media1'] %>">
            <img src="<%= post["AlbumArt"] %>" class="img-responsive" style="width:100%;" id="firstOne" />
            <div id="a" class="text-center" style="position:absolute;z-index:998;width:100%;left:0;bottom:0;height:50%;background-color:rgba(0,0,0,.9);display:none">
              <div style="position:absolute;top:40%;width:100%">
                <a href="#"><span class="glyphicon glyphicon-backward" style="color:#ddd;z-index:10;padding-right:10px"></span></a> 
                <a href="#"><span class="glyphicon glyphicon-play" style="color:#ddd;z-index:10"></span></a> 
                <a href="#"><span class="glyphicon glyphicon-forward" style="color:#ddd;z-index:10;padding-left:10px"></span></a><br/>
                <p><%= post['Song-Title'] %></p>
              </div>
            </div>
        </div>

        <% end %>

      </div>
    </div>

    <div id="landing" style="display:none;position:absolute;z-index:4;right:0;top:0;height:100%;width:100%;background-color:#111">
      <div id="blog" style="display:none">

      </div>

      <div id="about" style="display:none">
        <%= erb :about %>
      </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
