<!-- ############# STARTING CONTENT ############## -->
    <div class="container"> 

      <div class="row">
        <div class="col-xs-12">
          <div align="center"><img src="provo_yacht_club2.png" class="img-responsive" style="width:60%;"/></div><br/>

          <div class="text-center">

            <a href="#" id="play_big">
              <span class="glyphicon glyphicon-play" id="play_button" style="font-size:65px; color:white"></span>
            </a>

            <a href="#" id="pause_big" style="display:none">
              <span class="glyphicon glyphicon-pause" id="pause_button" style="font-size:65px; color:white;"></span>
            </a>

            <div id="hidePlay"><a href="#" id="play_start_text" style="text-decoration:none">
              <h2 class="lead" style="color:white;font-weight:100;letter-spacing:1px">Start Playing</h2>
            </a></div>

          </div>
        </div>

      </div>

    </div><!-- container-->



<!-- FRAME FOR BOTTOM ALBUM ART AND SONG SELECTION -->
  <div class="holds-all-the-guts">
    <div class="row">
      <div class="pull-right">
        <a href="http://www.soundcloud.com"><img src="http://developers.soundcloud.com/assets/powered_by_white-7ee4327cfbe5d678897edf6b6c5dd30f.png"></a>
      </div>
    </div>
    <div class="song-selector">
      <div class="row">
        <% @songs.each do |song| %>
        <div class="col-xs-1 song-thumb" data-url="<%= song.soundcloud_url %>">
          <!-- Album Art -->
          <img src="<%= song.album_art %>" class="img-responsive" style="width:100%" data-songId="<%= song.id %>" />
          <!-- Pop-Over -->
          <div class="song-popover text-center">
            <div class="links">
              <!-- <a href="#"><span class="glyphicon glyphicon-arrow-up" style="padding-right:10px"></span></a> -->
              <a href="#"><span class="glyphicon glyphicon-play play-this-song" data-url="<%= song.soundcloud_url %>" data-trackName="<%= song.title %>" data-artist="<%= song.artist %>"></span></a>
              <!-- <a href="#"><span class="glyphicon glyphicon-arrow-down" style="padding-left:10px"></span></a> -->
              <div class="info-text text-center">
                <p><%= song.title %><br/>
                <%= song.artist %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div><!-- /row -->
    </div><!-- /.song-selector -->
  </div><!-- /.holds-all-the-guts -->

    <!-- FRAME FOR BLOG AND ABOUT -->
    <div id="landing" style="display:none;position:absolute;z-index:4;right:0;top:0;height:100%;width:100%;background-color:#111">

      <!-- Frame for Blog -->
      <div id="blog" style="display:none"></div>
      <!-- Frame for About -->
      <div id="about" style="display:none"></div>

    </div><!-- END FRAME FOR BLOG AND ABOUT -->

