<% @user.each do |user| %>

  <tr id="<%= user.id %>">
    <td style="width:auto"><a class="edit btn btn-primary btn-xs btn-block" href="#" style="width:40px" disabled><span class="glyphicon glyphicon-pencil" style="width:40px"></span></a></td>
    <td style="width:auto"><a class="delete btn btn-danger btn-xs btn-block" href="admin/users/delete/<%= user.id %>"><span class="glyphicon glyphicon-trash" style="width:40px"></span></a></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td class="hidden-sm hidden-xs"><%= user.email %></td>
    <td class="text-center">
      <% if user.admin == true %>
        <span class="glyphicon glyphicon-ok text-success"></span>
      <% else %>
        <span class="glyphicon glyphicon-remove text-danger"></span>
      <% end %>
    </td>
    <td class="text-center rights" data-user="<%= user.id %>">
      <% if user.admin == true %>
        <a href="/admin/users/remove_admin/<%= user.email %>" class="btn btn-danger btn-xs remove">Remove Rights</a>
      <% else %>
        <a href="/admin/users/make_admin/<%= user.email %>" class="btn btn-success btn-xs give" id="makeAdmin">Make Admin</a>
      <% end %>      
    </td>
  </tr>

<% end %>




